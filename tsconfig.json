{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "cgm/viz/static/js/dist",
    "rootDir": "cgm/viz/static/js/src",
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["d3"],
    "baseUrl": "cgm/viz/static/js/src",
    "paths": {
      "/static/js/*": ["./*"],
      "/components/*": ["./components/*"]
    },
    "allowImportingTsExtensions": false,
    "moduleDetection": "force"
  },
  "include": ["cgm/viz/static/js/src/**/*"],
  "exclude": ["node_modules", "cgm/viz/static/js/dist"]
} 